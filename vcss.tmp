/* Fullscreen viewer with pastel themes and holiday variants */

:root {
  --bg-1: #f7f5ff;
  --bg-2: #e6f7ff;
  --ink: #243342;
  --muted: #64748b;
  --accent-1: #96d1c7;
  --accent-2: #ffd6e8;
}

/* Themes now set via data-theme attribute + CSS variables from JS */

* { box-sizing: border-box; }
html, body {
  height: 100%;
}
body {
  margin: 0;
  font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
  color: var(--ink);
  background: linear-gradient(145deg, var(--bg-1), var(--bg-2));
  overflow-x: hidden;
}

.stage {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px;
  position: relative;
}

.center { text-align: center; display: flex; flex-direction: column; align-items: center; gap: 2.2vh; position: relative; z-index: 2; }

.status {
  color: var(--muted);
  font-weight: 600;
  margin-bottom: 8px;
}

.days-wrap { width: 100%; max-width: 1200px; display: flex; align-items: center; justify-content: center; height: min(60vh, 85vw); }
.days {
  display: inline-block;
  font-family: 'Poppins', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
  font-size: 120px; /* JS will resize */
  font-weight: 900;
  line-height: 1;
  background-image: linear-gradient(45deg, var(--accent-1), var(--accent-2));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  white-space: nowrap;
  letter-spacing: -0.02em;
  will-change: font-size, letter-spacing;
}

.quote {
  margin-top: 16px;
  font-size: clamp(16px, 2.2vw, 28px);
  color: #3b4758;
  opacity: 0.9;
  padding: 0 16px;
  max-width: 900px;
  font-family: 'Merriweather', Georgia, serif;
  font-style: italic;
  line-height: 1.35;
  word-break: break-word;
  hyphens: auto;
}

/* removed time display */

/* Holiday decorative badges/overlays */
.badge {
  position: fixed;
  top: 12px;
  left: 12px;
  right: 12px;
  display: flex;
  justify-content: space-between;
  pointer-events: none;
  z-index: 0;
}

/* Karnataka flag: two horizontal stripes */
[data-theme="karnataka"] .badge::before {
  content: "";
  display: inline-block;
  width: 56px; height: 38px;
  border-radius: 6px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.12);
  background: linear-gradient(#ffd500 50%, #e01e37 50%);
  animation: float 5s ease-in-out infinite;
}

/* Diwali lamp (emoji) */
