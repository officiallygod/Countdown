/* Fullscreen viewer with pastel themes and holiday variants */

:root {
  --bg-1: #f7f5ff;
  --bg-2: #e6f7ff;
  --ink: #243342;
  --muted: #64748b;
  --accent-1: #96d1c7;
  --accent-2: #ffd6e8;
}

/* Sunday theme (pastel red) */
body.sunday {
  --bg-1: #fff1f2; /* rose-50 */
  --bg-2: #ffe4e6; /* rose-100 */
  --accent-1: #ffb3c1; /* soft red */
  --accent-2: #ffd6d9; /* pastel pink */
}

/* Diwali: warm glow */
body.holiday-diwali {
  --bg-1: #fff8e1; /* light amber */
  --bg-2: #ffe6f0; /* pink tint */
  --accent-1: #ffd27f; /* marigold */
  --accent-2: #f9a8d4; /* rose */
}

/* Karnataka Rajyotsava: yellow-red bicolor + soft accents */
body.holiday-karnataka {
  --bg-1: #fff7cc; /* soft yellow */
  --bg-2: #ffe0e0; /* gentle red */
  --accent-1: #ffd54f;
  --accent-2: #ff9aa2;
}

/* Christmas: pastel red/green */
body.holiday-christmas {
  --bg-1: #ffe7e7; /* soft red */
  --bg-2: #e8f7ef; /* mint green */
  --accent-1: #ffb4b4;
  --accent-2: #a7e8c9;
}

/* New Year: night sky + fireworks pastels */
body.holiday-newyear {
  --bg-1: #f0f4ff; /* light indigo */
  --bg-2: #e9ddff; /* lavender */
  --accent-1: #a3bffa;
  --accent-2: #d6bcfa;
}

* { box-sizing: border-box; }
html, body {
  height: 100%;
}
body {
  margin: 0;
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
  color: var(--ink);
  background: linear-gradient(145deg, var(--bg-1), var(--bg-2));
}

.stage {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px;
}

.center {
  text-align: center;
}

.status {
  color: var(--muted);
  font-weight: 600;
  margin-bottom: 8px;
}

.days {
  font-size: clamp(72px, 18vw, 240px);
  font-weight: 900;
  line-height: 1;
  background-image: linear-gradient(45deg, var(--accent-1), var(--accent-2));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.quote {
  margin-top: 16px;
  font-size: clamp(16px, 2.6vw, 28px);
  color: #3b4758;
  opacity: 0.9;
}

.now {
  margin-top: 8px;
  font-size: 0.95rem;
  color: var(--muted);
}

/* Holiday decorative badges/overlays */
.badge {
  position: fixed;
  top: 12px;
  left: 12px;
  right: 12px;
  display: flex;
  justify-content: space-between;
  pointer-events: none;
}

/* Karnataka flag: two horizontal stripes */
body.holiday-karnataka .badge::before {
  content: "";
  display: inline-block;
  width: 72px; height: 48px;
  border-radius: 6px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.12);
  background: linear-gradient(#ffd500 50%, #e01e37 50%);
}

